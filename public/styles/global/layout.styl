*
  box-sizing: border-box
  margin: 0
  border: 0

html,
body
  min-height: 100%
  min-height: 100vh
  width: 100%

.text-hidden
  text-indent -200%

.airtable-embed
  background: transparent
  border-width: 0
  border-bottom: 1px solid #ccc
  height: 95%
  position: absolute
  top: 0
  bottom: 0

.submit-link
  background: #fff
  position: absolute
  z-index: zIndex.submitLink
  top: calc(95% - 25px)
  line-height 2rem
  bottom: 0
  left: 0
  right: 0
